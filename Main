local HyperEscape = {
	AimBot = {
		Type = "Camera"; -- Camera,Mouse(Soon)
		Camera = {
			Enable = false;
			TeamCheck = false;
			WallCheck = false;
			Smoothness= 1; --[[Fix, distance makes it faster]]

			AimPart = "Head"; -- Head, HumanoidRootPart
			Keybind = "MouseButton2"; --MouseButton1, MouseButton2


			ShowFov = false;
			FovSize = 200;

			OutlineThickness = 1;

			Filltranceparency = 1;
			FillColor = Color3.fromRGB(200,0,150);

			OutlineTranceparencty = 0;
			OutlineColor = Color3.fromRGB(100,0,100);

			PlayerTargetName = "Nill"; 
		};
	};

	Esp = {
		PlayerTarget = {
			ShowPlayerTarget = true; 
			TargetIndicatorType = "all"; -- Tracer, Box, all
			TargetColor = Color3.fromRGB(255,0,0);
		};

		Box ={
			BoundingBox = false;

			TeamCheck = false;
			TeamColor = false;

			FillBox = false;
			FillBoxTransparency = 0;

			BoxColor = Color3.fromRGB(100,0,100);
			BoxFillColor = Color3.fromRGB(0,100,100);

			-- info 
			ShowHealth = false;
			HealthType = "Bar", --Text, Bar, Both
			Distance = false;
			Name = false;

		};

		Tracers = {
			Enabled = false;
			TeamCheck = false;
			TeamColor = false;

			Thickness = 2;

			BorderThickness = 0;

			Color = Color3.fromRGB(100,0,100);
			BoderColor = Color3.fromRGB(0,100,100);

			Transparency = 0;

			TracerToPlayer = "Bottom";-- Bottom, Top 
			Tracerto = "HumanoidRootPart";
			TracerToNumb = -2500; -- 2500, -2500 

			TracerFrom = "Bottom"; -- Bottom,Mouse, Top 
			TracerFromNumber = 1; -- 1, ,1500
		};

		Outlines = {
			Enable = false;
			TeamCheck = false;
			TeamColor = false;

			AllwaysShow = true;

			FillCollor = Color3.fromRGB(0,255,255);
			FillTrancparenct = 0;

			OutlineColor = Color3.fromRGB(255,255,255);
			OutlineTrancparency = 0;
		};

		Chams = {
			Enabled = false;
			TeamCheck = false;

			HiddenColor = Color3.fromRGB(0,255,255);
			VisibleColor = Color3.fromRGB(255,0,100);

			Transparency = 0,5;
		};

	};
}

local Library = loadstring(game:HttpGet("https://raw.githubusercontent.com/Mick-gordon/UILibForHyper/main/UI%20libHyper"))()
local Window = Library:CreateWindow("Hyper Escape | Universal", Vector2.new(492, 598), Enum.KeyCode.RightControl)

local AimbotTab = Window:CreateTab("Aimbot") 

local AimbotTypeSection = AimbotTab:CreateSector("Aimbot Type", "Right") 
AimbotTypeSection:AddDropdown("Type", {"Camera", "Camera"}, "Camera", false, function(AimType)
	HyperEscape.AimBot.Type = AimType
end)

print("ESP")
local ESPTab = Window:CreateTab("ESP") 
local BoxesSection = ESPTab:CreateSector("Boxes", "left")
local boxColor = BoxesSection:AddToggle("Box", false, function(bbt)
	HyperEscape.Esp.Box.BoundingBox = bbt
end)
boxColor:AddColorpicker(Color3.fromRGB(75,0,130), function (bbc)
	HyperEscape.Esp.Box.BoxColor = bbc
end)

BoxesSection:AddToggle("Team Check", false, function(bbtc)
	HyperEscape.Esp.Box.TeamCheck = bbtc
end)

BoxesSection:AddToggle("Use Team Color", false, function(Utcbb)
	HyperEscape.Esp.Box.TeamColor = Utcbb
end)

local boxFillColor = BoxesSection:AddToggle("Fill Box", false, function(fbb)
	HyperEscape.Esp.Box.FillBox = fbb
end)
boxFillColor:AddColorpicker(Color3.fromRGB(75,0,130), function (fbbc)
	HyperEscape.Esp.Box.BoxFillColor = fbbc
end)

print("Tracers")
local TracersSection = ESPTab:CreateSector("Tracers", "left")
local TracersColor = TracersSection:AddToggle("Tracers", false, function(TT)
	HyperEscape.Esp.Tracers.Enabled = TT
end)
TracersColor:AddColorpicker(Color3.fromRGB(75,0,130), function (TC)
	HyperEscape.Esp.Tracers.Color = TC
end)

TracersSection:AddToggle("Team Check", false, function(TTC)
	HyperEscape.Esp.Tracers.TeamCheck = TTC
end)

TracersSection:AddToggle("Team Color", false, function(TTTC)
	HyperEscape.Esp.Tracers.TeamColor = TTTC
end)

TracersSection:AddSlider("Tracer Transparency", 0, 0, 1, 0.1, function(TTans)
	HyperEscape.Esp.Tracers.Transparency = TTans
end)

TracersSection:AddSlider("Tracer Thickness", 0, 2, 5, 0.1, function(TTCK)
	HyperEscape.Esp.Tracers.Thickness = TTCK
end)

TracersSection:AddSlider("Tracer Border Thickness", 0, 0, 5, 0.1, function(TBTH)
	HyperEscape.Esp.Tracers.BorderThickness = TBTH
end)

TracersSection:AddDropdown("Tracer To Position", {"Bottom", "Top"}, "Bottom", false, function(TTP)
	HyperEscape.Esp.Tracers.Tracerto = TTP
end)

TracersSection:AddDropdown("Tracer From Position", {"Bottom", "Mouse", "Top"}, "Bottom", false, function(TFP)
	HyperEscape.Esp.Tracers.TracerFrom = TFP
end)


local MiscTab = Window:CreateTab("Misc") 


local SettingsTab = Window:CreateTab("Settings") 

print("Done")


